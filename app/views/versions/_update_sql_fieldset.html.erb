<fieldset>
  <legend>Update SQL</legend>
  <pre class="brush: sql"><%=h create_update_sql(version) %></pre>

  <% form_for(version, :url => test_app_activity_version_path(activity.app, activity, version)) do |f| %>
    <%= render :partial => 'shared/form_error', :locals => {:f => f} %>
    <%= f.hidden_field :state, :value => Version::STATE_TESTED %>
    <div class="span-5">
      <%= label_tag :test_db_instance_id, "Test Database" %><br />
      <%= select_tag :test_db_instance_id, "<option>-- Select --</option>" << options_from_collection_for_select(DbInstance.env_test, :id, :to_s), { :class => 'span-5' } %>
    </div>
    <div class="span-5">
      <%= label_tag :test_schema, 'Test Database Schema' %><br />
      <%= text_field_tag :test_schema, '', :class => "span-5" %>
    </div>
    <%= render :partial => 'shared/db_credentials_form' %>
    <hr class="space"/>
    <%= render :partial => 'shared/vc_credentials_form' %>
    <br /><%= submit_tag 'Execute', :class => 'execute_button' %>
  <% end %>
</fieldset>